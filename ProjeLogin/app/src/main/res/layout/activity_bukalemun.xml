<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bukalemun">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bukalemunbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oyunAdi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/taskagitmakastxt2"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FDF8F8"
            android:textSize="30dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/bukalemunimg"
            android:layout_width="wrap_content"
            android:layout_height="233dp"
            android:layout_weight="0.4"
            android:background="#4CAF50"
            app:srcCompat="@drawable/yesil" />

        <Button
            android:id="@+id/kirmizibtn"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:background="#651010"
            android:text="Kırmızı Arka PLan" />

        <Button
            android:id="@+id/mavibtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="#2E3F9F"
            android:text="Mavi Arka Plan" />

        <Button
            android:id="@+id/pembebtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="#901FA3"
            android:text="Pembe Arka Plan" />

        <Button
            android:id="@+id/yesilbtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.1"
            android:background="#4CAF50"
            android:text="Yeşil Arka Plan" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>