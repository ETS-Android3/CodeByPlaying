<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mutluetcl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mutluetbg"
    tools:context=".MutluEt">

    <LinearLayout
        android:id="@+id/mutluetll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oyunAdi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/taskagitmakastxt2"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#230000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/Makineedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="start|top"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="#230000" />

        <Button
            android:id="@+id/Makinebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text="@string/makineye_sor"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="218dp" />

        <TextView
            android:id="@+id/Makinetxt"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/taskagitmakastxt2"
            android:layout_margin="30dp"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text="@string/makinenin_cevab"
            android:textColor="#230000"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>