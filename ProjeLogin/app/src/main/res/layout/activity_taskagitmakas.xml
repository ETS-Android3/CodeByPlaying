<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasKagitMakas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tkmbg"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/oyunAdi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/taskagitmakastxt"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bilgisayartext"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text=" Bilgisayar"
                android:gravity="center"
                android:background="@drawable/taskagitmakastxt2"
                android:textAlignment="center"
                android:textColor="@color/colorDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/oyuncutext"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/taskagitmakastxt2"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Oyuncu"
                android:textAlignment="center"
                android:textColor="@color/colorDark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bilgisayarimg"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@android:drawable/screen_background_dark_transparent" />

            <ImageView
                android:id="@+id/oyuncuimg"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/screen_background_dark_transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tasbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/tas" />

            <ImageButton
                android:id="@+id/kagitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/kagit" />

            <ImageButton
                android:id="@+id/makasbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/makas" />
        </LinearLayout>

        <TextView
            android:id="@+id/Makinetxt"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:text="Makinenin cevabÄ±"
            android:background="@drawable/taskagitmakastxt"
            android:textColor="#AC0A0A"
            android:textSize="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>